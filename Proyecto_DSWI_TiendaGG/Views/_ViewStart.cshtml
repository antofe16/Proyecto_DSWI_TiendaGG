@{
    string tipo = ViewContext.ViewBag.tipo;

    if(tipo == "Cliente") { Layout = "~/Views/Shared/_LayoutCliente.cshtml"; }
    if(tipo == "Admin") { Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
    if (tipo == "Index") { Layout = "~/Views/Shared/_LayoutIndex.cshtml"; }
    if (tipo == "LoginCli") { Layout = "~/Views/Shared/_LayoutLoginCliente.cshtml"; }
    if (tipo == "LoginAdm") { Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml"; }
}
