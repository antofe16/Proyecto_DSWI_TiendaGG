                    <div class="form_wrapper" style="height:130px;">
                        @using (Html.BeginForm("InicioCliente", "Negocios", FormMethod.Post))
                        {
                            <div class="input_field">
                                <span><i aria-hidden="true" class="fa fa-at"></i></span>
                                @Html.TextBox("email", p.email_cli, new { @placeholder = "Email", @required = "required" })
