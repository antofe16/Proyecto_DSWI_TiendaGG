@model IEnumerable<Proyecto_DSWI_TiendaGG.Models.Producto>

@{
    ViewBag.Title = "VistaProductos";
    int p = (int)ViewBag.p;
    string term = ViewBag.term;
    string idcat = ViewBag.idcat;
    int c = ViewBag.c;
}

<style>
    #botones {
        margin: 10px 0 10px 0;
        padding: 5px 5px 5px 5px;
        text-align: center;
    }

    .imgprod {
        border: solid 5px #e4b210;
        border-radius: 5px;
    }

    figcaption {
        font-size: 16pt;
        text-align: center;
    }

    .contenedor {
        display: flex;
        flex-direction: column;
    }

    .seccion {
        margin: 20px auto;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-around;
        border: 5px solid #f2b31d;
        padding: 20px;
        background-color: white;
    }

    figure {
        width: 30%;
        border: 5px solid #f2b31d;
        border-radius: 10px;
        padding: 5px;
        text-align:center;
    }

    .figimg {
        margin-left: 12px;
        margin-right: 4px;
        border-radius: 5px;
        margin-top: 10px;
    }

    figcaption {
        text-align: left;
        padding: 10px;
        margin: 5px;
    }

    .btn-warning, .btn-danger {
        font-size: 18pt;
        color: white;
        margin: 3px 1px 3px 1px;
    }

    h2 {
        color: white;
    }

    .contnull {
        padding: 50px 10% 50px 20%;
    }

    .null {
        border: solid 5px #808080
    }
</style>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-3">
            <h2>Categoria : </h2>
            <br />
            @Html.DropDownList("idcat", (SelectList)ViewBag.categorias, new { @class = "form-control" })
            <br />
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-3">
            <h2>Descripcion : </h2>
            <br />
            @Html.TextBox("term", null, new { @class = "form-control" })
            <br />
        </div>
        <div class="col-md-1">
        </div>
        <div class="col-md-3">
            <h2>Precio : </h2>
            <br />
            @Html.TextBox("p1", null, new { @class = "form-control" })
            <h2 style="text-align:center;"> a </h2>
            @Html.TextBox("p2", null, new { @class = "form-control" })
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <div style="padding:  5px 50% 5px 50%">
        <button name="p" value="0" class="btn btn-warning" style="color : white;">Buscar</button>
    </div>
}

@{
    if (Model.Count() == 0)
    {
        <div class="contnull">
            <h2 style="margin: 1px 10% 1px 20%">No se encontraron resultados :(</h2>
            <br />
            <img class="null" src="~/img/gif/null.gif" width="900px" height="500px" />
            <br />
            <h2 style="margin: 1px 10% 1px 20%">Intenta buscando otra cosa</h2>
        </div>
    }

    else
    {

        <div class="contenedor">
            <section class="seccion">
                @foreach (var item in Model)
                {
                <figure>
                    <img class="figimg" src="@Url.Content(item.img_pro)" height="300" width="300">
                    <figcaption>
                        <strong> @item.desc_pro</strong>
                    </figcaption>
                    <figcaption>
                        <strong>Precio</strong> : S/.@item.pre_pro
                    </figcaption>
                    @if (item.est_pro == 0)
                    {
                        <figcaption>
                            <strong>Agotado :,(</strong> 
                        </figcaption>
                    }
                    else
                    {
                        <figcaption>
                            @Html.ActionLink("Seleccionar","Select",new { cod= item.cod_pro},new { @class="btn btn-warning"})
                        </figcaption>
                    }
                </figure>
                }

            </section>
        </div>



    <div id="botones">
        @Html.ActionLink("<<",
                              "VistaProductos",
                              "Negocios",
                              new { p = p, op = "-", idcat = idcat, term = term },
                              new { @class = "btn btn-warning", @style = "color : white;" })
        @for (int i = 0; i < (int)ViewBag.pags; i++)
        {
            if (c == 0)
            {
                <em>Haz una busqueda ;)</em>
            }
            if (i == (int)ViewBag.p)
            {
                @Html.ActionLink((i + 1).ToString(),
                               "VistaProductos",
                               "Negocios",
                               new { p = i, idcat = idcat, term = term },
                               new { @class = "btn btn-danger", @style = "color : white;" })
            }
            else
            {
                @Html.ActionLink((i + 1).ToString(),
                             "VistaProductos",
                             "Negocios",
                             new { p = i, idcat = idcat, term = term },
                             new { @class = "btn btn-warning" })
            }


        }
        @Html.ActionLink(">>",
                               "VistaProductos",
                               "Negocios",
                               new { p = p, op = "+", idcat = idcat, term = term },
                               new
                                   {
                                       @class = "btn btn-warning",
                                   @style = "color : white;"
                                   })
    </div>
    <div>
        <h2>Se encontraron @c registros</h2>
    </div>
    }
}
