<!DOCTYPE html>
<html>
<head>
    @{
        Proyecto_DSWI_TiendaGG.Models.Administrador reg = (Proyecto_DSWI_TiendaGG.Models.Administrador)Session["Admin"];
    }
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0-11/css/all.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/inicio.css">
    <link rel="stylesheet" href="~/css/styleregistro.css">
    <link rel="stylesheet" href="~/css/soporte.css">
    <link rel="stylesheet" href="~/css/graficas.css">
    <link rel="icon" type="image/png" href="img/fantasma.png">
    <title>Tienda GG</title>

</head>
<body>

    <!-- ------------------------------- Navbar -------------------------------- -->
    <header>
        <nav id="bar" class="navbar bg-dark">
            <div id="r-icons" class="d-flex">
                <div id="menu">
                    <i class="fas fa-bars ml-2"></i>
                </div>
                <div id="game">
                    <i class="fas fa-gamepad"></i>
                </div>
            </div>
            <div id="links" class="d-flex">
                @Html.ActionLink("Inicio", "InicioAdmin", null, new { @class = "nav-link" })
                @Html.ActionLink("Productos", "ConsultaProductos", null, new { @class = "nav-link" })
                <a class="nav-logo" href="~/Negocios/InicioAdmin">
                    <img src="~/img/TiendaGG-logo.png"
                         alt="logo" width="120" height="40">
                </a>
                @Html.ActionLink("Registrar", "CreateProducto", null, new { @class = "nav-link" })
                @Html.ActionLink("Soporte", "SoporteAdmin", null, new { @class = "nav-link" })
            </div>
            <div id="l-icons" class="d-flex justify-content-end">
                <div id="user" class="dropdown">
                    <div href="#" class="dropdown-toogle" data-toggle="dropdown"
                         id="dwnProfile" role="button">
                        <i class="fas fa-user-alt"></i>
                    </div>
                    <div class="dropdown-menu" aria-labelledby="dwnProfile">
                        <div class="text-center" href="#">
                            <div id="user-profile">
                                <h5>Bienvenido</h5>
                                <i class="fas fa-user-circle"></i>
                            </div>
                            <h6 class="usuario">@reg.nom_adm @reg.ape_adm</h6>
                            <p class="correo" style="color: black;">@reg.email_adm</p>
                        </div>
                        <div class="dropdown-divider"></div>
                        <div class="text-center" href="#">
                            <div id="user-profile">
                                <i class="mt-2 fas fa-chart-line"></i>
                            </div>

                            @Html.ActionLink("Ventas","Reportes")

                        </div>
                        <div class="dropdown-divider"></div>
                        <div id="logout" class="text-center">
                            @Html.ActionLink("Cerrar Sesion","CerrarSesionAdm",null,new { @class="btn btn-warning"})
                        </div>
                        <div class="dropdown-divider"></div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ----------------------------- Fin Navbar ------------------------------ -->
    <!-- ------------------------------- Inicio -------------------------------- -->
    <main style=" padding : 50px 10% 50px 10%; background-image: url(@Url.Content("~/img/jpg/34.jpg")); background-size:100%;">
        @RenderBody()
    </main>
    <!-- ----------------------------- Fin Inicio ------------------------------ -->
    <!-- ------------------------------- Footer -------------------------------- -->

    <footer>
        <div id="main-footer">
            <div id="footer-container" class="container">
                <div id="footer-info" style="text-align: center;">
                    <marquee direction="right">
                        <img src="~/img/TiendaGG-logo.png" alt="logo" height="100px"
                             width="250px">
                        <br>
                        <h2 style="color: white;">Sitio Web de "Tienda GG"</h2>
                    </marquee>
                </div>
                <div id="footer-links">
                    <div class="links-container">
                        <h5>TIENDA GG</h5>
                        <ul>
                            <li class="link">@Html.ActionLink("Inicio", "InicioAdmin", null, new { @class = "link" })</li>
                            <li class="link">@Html.ActionLink("Productos", "ConsultaProductos", null, new { @class = "link" })</li>
                            <li class="link">@Html.ActionLink("Registrar", "CreateProducto", null, new { @class = "link" })</li>
                            <li class="link">@Html.ActionLink("Soporte", "SoporteAdmin", null, new { @class = "link" })</li>
                        </ul>
                    </div>
                    <div class="social-media">
                        <a href="https://es-la.facebook.com/"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://twitter.com/"><i class="fab fa-twitter"></i></a>
                        <a href="https://www.instagram.com/?hl=es-la"><i class="fab fa-instagram"></i></a>
                        <a href="https://outlook.live.com/owa/"><i class="fas fa-envelope"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div id="copyright">
            <small>© 2019. Todos los derechos reservados.</small>
        </div>
    </footer>

    <!-- ------------------------------- Fotter -------------------------------- -->

    <div id="sidebar">
        <div id="sidebar-links" class="d-flex">
            <div id="close">
                <i class="fas fa-times"></i>
            </div>
            @Html.ActionLink("Inicio", "InicioAdmin", null, new { @class = "sidebar-link" })
            @Html.ActionLink("Productos", "ConsultaProductos", null, new { @class = "sidebar-link" })
            @Html.ActionLink("Registrar", "CreateProducto", null, new { @class = "sidebar-link" })
            @Html.ActionLink("Soporte", "SoporteAdmin", null, new { @class = "sidebar-link" })
        </div>
    </div>

    <!-- ----------------------------- Javascript ------------------------------ -->

    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/app.js"></script>

</body>
</html>
